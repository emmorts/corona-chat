{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./",
    "outDir": "./dist/",
    "paths": {
      "ws": [
        "./src/@types/ws",
      ],
      "common/*": [ "./src/common/*" ],
      "client/*": [ "./src/client/*" ],
      "server/*": [ "./src/server/*" ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    // "**/*.spec.ts",
    "./src/@types"
  ]
}